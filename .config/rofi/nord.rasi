@import "xglobals.rasi"

* {
  background-color: @bg;
  text-color: @color6;
}

window {
    width: 35%;
    border: 1px;
    border-color: @color8;
    padding: 20px;
}

listview {
    spacing: 4px;
    scrollbar: false;
    padding: 4px 0px 0px;
}

element {
    padding: 1px;
}
element normal.urgent {
    background-color: 				@bg;
    text-color:       				@color11;
}
element normal.active {
    background-color: 				@bg;
    text-color:       				@color14;
}
element selected {
    background-color: @color6;
    text-color: @bg;
}
